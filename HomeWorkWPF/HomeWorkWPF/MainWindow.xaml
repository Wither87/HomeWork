<Window x:Class="HomeWorkWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWorkWPF"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight" >
    <DockPanel LastChildFill="True" MinWidth="400" MinHeight="300">
        <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right" Orientation="Horizontal" MinWidth="40">
            <Button Margin="5" Padding="5">OK</Button>
            <Button Margin="5" Padding="5">Cancel</Button>
        </StackPanel>
        <TextBox DockPanel.Dock="Top" Margin="5" FontSize="15" BorderBrush="Azure" BorderThickness="3">Какой то текст...</TextBox> 
    </DockPanel>
</Window>

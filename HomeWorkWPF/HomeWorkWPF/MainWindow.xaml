<Window x:Class="HomeWorkWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWorkWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="220" Width="400" Background="LightCyan">
    <StackPanel Margin="5">
        <Label Margin="5" Content="Example" HorizontalAlignment="Center"></Label>
        <Button Margin="5" HorizontalAlignment="Left">Button 1</Button>
        <Button Margin="5" HorizontalAlignment="Right">Button 2</Button>
        <Button Margin="5">Button 3</Button>
        <Button Margin="5" HorizontalAlignment="Center">Button 4</Button>
        <Button Margin="5,10,70,40">Button 5</Button>
    </StackPanel>
</Window>

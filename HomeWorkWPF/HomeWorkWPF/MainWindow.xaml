<Window x:Class="HomeWorkWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWorkWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="220" Width="400" Background="LightCyan">
    <DockPanel>
        <Button DockPanel.Dock="Left" Background="DarkMagenta">LeftButton</Button>
        <Button DockPanel.Dock="Bottom" Background="Firebrick">BottomButton</Button>
        <Button DockPanel.Dock="Right" Background="CadetBlue">RightButton</Button>
        <Button DockPanel.Dock="Top" Background="GreenYellow">TopButton</Button>
        <Button Background="Honeydew">Свободное пространство</Button>
    </DockPanel>
</Window>
